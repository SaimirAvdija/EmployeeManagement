@model SimulatorVentilDetailsViewModel

@{
    ViewBag.Title = "Ventil Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Ventil.Name</h1>
            </div>

            <div class="card-body text-center">
                <img class="card-img-top" src="~/images/Valve.png" />

                <h4>Ventil ID : @Model.Ventil.Id</h4>
                <h4>Name : @Model.Ventil.Name</h4>
                <h4>Activity : @Model.Ventil.IsActive</h4>

            </div>
            <div class="card-footer text-center">
                <a asp-controller="simulator" asp-action="showventil" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/CustomScript.js"></script>
}